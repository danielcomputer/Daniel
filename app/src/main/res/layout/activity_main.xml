<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.dan.daniel.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="HNG Project"
        android:padding="10dp"
        android:textColor="#770000ff"
        android:textSize="30sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/jjj"
        android:padding="10dp"

        android:src="@drawable/dan1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="I'm DANIEL ARCHIBONG" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A computer science Student" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="At the University of Uyo, Uyo - Aks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="I'm a Front-End Web Developer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="I code with HTML, CSS, JS and PHP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="I'm Passionate About Technology"
        android:textColor="#FBBC05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Proudly from Akwa Ibom State"
        android:textColor="#EA4335" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Slack Name:@archibongdaniel13"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Git Name: @danielcomputer"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingBottom="1dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/face_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:paddingRight="20dp"
            android:src="@drawable/facebook" />


        <ImageView
            android:id="@+id/twit_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingRight="5dp"
            android:src="@drawable/twiter"/>


        <ImageView
            android:id="@+id/gmail_img"
            android:layout_toRightOf="@id/twit_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/gmail"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Stay Connected with Daniel!"
        android:textSize="20dp"
        />

</LinearLayout>
</ScrollView>